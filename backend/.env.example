PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ──────────────────────────────────────────────
# Supabase Configuration
# ──────────────────────────────────────────────
# Get these from the project admin (production Supabase is self-hosted).
# SUPABASE_URL is the base URL only — do NOT add /rest/v1 (the client adds it).
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# ──────────────────────────────────────────────
# JWT Authentication
# ──────────────────────────────────────────────
# Must match the production JWT_SECRET so existing tokens work.
JWT_SECRET=
JWT_EXPIRES_IN=7d

# ──────────────────────────────────────────────
# Read-Only Mode (for developers)
# ──────────────────────────────────────────────
# Set to "true" to block all write operations (POST/PUT/PATCH/DELETE).
# Auth login/verify are still allowed so you can sign in.
# Use this when connecting to the production database for development.
READ_ONLY_MODE=true
